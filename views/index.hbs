                        <input type="text" class="col-11 form-control" id="sa-l2-b" value="10" readonly>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <h3>Output Root Info | L2 -&gt; L1</h3>
                <div class="form-group mt-2">
                    <div class="row">
                        <label for="ori-or" class="col-4 col-form-label">OutputRoot</label>
                        <input type="text" class="col-8 form-control" id="ori-or" value="10" readonly>
                    </div>
                    <div class="row mt-1">
                        <label for="ori-l2-oi" class="col-4 col-form-label">L2OutputIndex</label>
                        <input type="text" class="col-8 form-control" id="ori-l2-oi" value="10" readonly>
                    </div>
                    <div class="row mt-1">
                        <label for="ori-l2-bn" class="col-4 col-form-label">L2BlockNumber</label>
                        <input type="text" class="col-8 form-control" id="ori-l2-bn" value="10" readonly>
                    </div>
                    <div class="row mt-1">
                        <label for="ori-l1-ts" class="col-4 col-form-label">L1Timestamp</label>
                        <input type="text" class="col-8 form-control" id="ori-l1-ts" value="10" readonly>
