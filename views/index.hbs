            <div class="form-group">
                <div class="row mr-2">
                    <label for="w-amount" class="col-2 col-form-label">Amount</label>
                    <input type="text" class="col-10 form-control" id="w-amount" value="10">
                </div>
                <div class="row mt-1 mr-2">
                    <label for="w-to" class="col-2 col-form-label">To</label>
                    <input type="text" class="col-10 form-control" id="w-to" value="0x0000000000000000000000">
                </div>
            </div>

